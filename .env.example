# Application
APP_ENV=development
APP_PORT=8080
APP_NAME=POS-System

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=posuser
DB_PASSWORD=pospassword
DB_NAME=posdb
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10
DB_CONNECTION_MAX_LIFETIME=1h

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672/
RABBITMQ_EXCHANGE=pos_events
RABBITMQ_QUEUE_PREFIX=pos_

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token,X-Tenant-ID

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=10485760

# Data Retention
DATA_RETENTION_FREE_DAYS=14
DATA_RETENTION_CHECK_INTERVAL=24h

# Worker
WORKER_POOL_SIZE=10
WORKER_QUEUE_SIZE=100